<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiChartApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiChartApp"
    xmlns:view="clr-namespace:MauiChartApp.View"
    Shell.FlyoutBehavior="Flyout" Title="{Binding Title}">

    <ShellContent
        Title="{Binding Title}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Log view"
        ContentTemplate="{DataTemplate view:LogPage}"
        Route="LogPage" />

</Shell>
